#! /bin/bash
echo '--------------------------------------------------------'
echo '           combo commands'
echo '--------------------------------------------------------'
echo 'dls           - runs ls commands for images, containers, and services'

echo ' '
echo '--------------------------------------------------------'
echo "           'docker image' command short cuts"
echo '--------------------------------------------------------'
echo 'dihelp        - Docker official help for 'docker image' commands'
echo 'dib $1        - Build a docker image from Dockerfile and assign $1=name/tag (e.g. elr/qa_server)'
echo 'dirm $1       - Remove a docker image given its $1=name/tag (e.g. elr/qa_server)'
echo 'dils          - List docker images'
echo 'diprune       - Remove all images that do not have containers'
echo 'dipull $1     - Pull a docker image from docker hub by $1=name (e.g. solr) or name/tag (e.g. elr/qa_server)'
echo $'dipush $1     - Push a docker image to docker hub $1=name or name/tag (e.g. elr/qa_server) NOTE: won\'t be pushing anything by name only'

echo ' '
echo '--------------------------------------------------------'
echo "         'docker container' command short cuts"
echo '--------------------------------------------------------'
echo 'dchelp        - Docker official help for 'docker container' commands'
echo 'dcall         - List all docker containers running or not'
echo 'dcrun         - List only running docker containers'
echo 'dcprune       - Remove all STOPPED containers'
echo 'dcpruneall    - Remove all STOPPED and RUNNING containers'
echo 'dcgo $1       - Start a container by docker assigned name (e.g. $1=sleepy_boyd) or id (e.g. $1=fb213)'
echo 'dcstop $1     - Stop a container by docker assigned name (e.g. $1=sleepy_boyd) or id (e.g. $1=fb213)'
echo 'dcrestart $1  - Restart a container by docker assigned name (e.g. $1=sleepy_boyd) or id (e.g. $1=fb213)'
echo 'dckill $1     - Kill a container by docker assigned name (e.g. $1=sleepy_boyd) or id (e.g. $1=fb213)'

echo ' '
echo '--------------------------------------------------------'
echo "       'docker container run' command short cuts"
echo '--------------------------------------------------------'
echo 'dcrhelp       - Docker official help for 'docker container run' commands'
echo $'dcr $@        - Execute \'docker container run $@\' command appending all arguments with $@'
echo $'dcrit $@      - Execute \'docker container run -it $@\' command appending all arguments with $@'
echo $'dcrport $1 $2 - Run a named container identified by $2=name/tag (e.g. elr/qa_server) on a specific port $1 (e.g. 3000)' 
echo 'drrs $1       - Run spec tests for docker container identified by $1=name/tag:version (e.g. $1=elr/qa_server:v1)'
echo 'dbash $1      - Run bash command line for docker container identified by $1=name/tag:version (e.g. $1=elr/qa_server:v1) <CTRL><D> to end'

echo ' '
echo '--------------------------------------------------------'
echo "       'docker-compose' command short cuts"
echo '--------------------------------------------------------'
echo 'dcphelp       - Docker official help for 'docker-compose' commands'
echo 'dcpls         - List services started by docker-compose based on services defined in docker-compose-yml'
echo 'dcpa $1       - Attach to a service running through docker-compose identified by $1=Name listed by dcpls (e.g. $1=app)'
echo '   <CTRL><P> <CTRL><Q> to detach from the container'
echo 'dcpb          - Build a docker composition based on docker-compose.yml'
echo '   NOTE: Containers do not run with build. See dcpup'
echo '   NOTE: name is defined in docker-compose.yml at top level (e.g. apache:)'
echo 'dcpup $1      - Build and run a container from the docker composition identified by $1=name (e.g. apache).'
echo '                Build and run all containers if name is not specified.'
echo 'dcpdown $1    - Stop running and remove a container from the docker composition identified by $1=name (e.g. apache).'
echo '                Stop and remove all containers defined in docker composition if name is not specified.'
echo 'dcpr $1 $2    - Run a command (e.g. $2=bash) in a docker-compose service container identified by the service name (e.g. $1=app)'
echo 'dcpstop $1    - Stop running a container from the docker composition identified by $1=name (e.g. apache).'
echo '                Stop all containers defined in docker composition if name is not specified.'
echo 'dcprestart $1 - Restart a running container from the docker composition identified by $1=name (e.g. apache).'
echo '                Restart all containers defined in docker composition if name is not specified.'
echo 'dcplogs $1    - Show the logs for a container from the docker composition identified by $1=name (e.g. apache) '

